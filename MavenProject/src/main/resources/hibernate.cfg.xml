        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://sqlsrv;database=FinalPhotoBsd;trustServerCertificate=true;</property>
        <property name="hibernate.connection.username">rikisabo</property>
